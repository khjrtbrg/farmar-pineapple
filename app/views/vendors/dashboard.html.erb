<h2>Vendor Dashboard</h2>

<strong>Welcome, <%= @vendor.username %></strong>
<ul>
  <li>Email: <%= @vendor.email %></li>
  <li>Market: <%= @current_market %></li>
  <li>Description: <%= @vendor.description %></li>
  <li>Products: <%= "None Created" if @vendor.products.count < 1 %>
    <ul>
      <% @vendor.products.each do |product| %>
        <li><%= link_to product.name, show_product_path(product.id) %> (<%= link_to "edit", edit_product_path(product.id) %> - <%= link_to "delete", delete_product_path(product.id) %>)</li>
      <% end %>
      <li class="more-products"><a href="<%= new_product_path %>"><%= image_tag "add.png", alt: "Add Button" %> Product</a></li>
    </ul>
  </li>
</ul>

<div class="buttons">
  <a href="<%= edit_vendor_path %>"><button type="button">Edit</button></a>&nbsp;&nbsp;<a href="<%= delete_vendor_path %>"><button type="button">Delete Account</button></a>
</div>
