<h2>Add Product</h2>

<form method="POST" action="<%= new_product_path %>">
  <table>
    <tr>
      <td><label for="product[name]">Name:</label></td>
      <td><input type="text" name="product[name]"></td>
    </tr>
    <tr>
      <td><label for="product[price]">Price:</label></td>
      <td><input type="text" name="product[price]"></td>
    </tr>
  </table>
  <a href="<%= dashboard_path %>"><button type="button">Back</button></a>
  <input type="submit" value="Add Product">
</form>
